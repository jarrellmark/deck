<h1>Cards</h1>

<h2>Actions</h2>

<ul>
  <li><%= link_to 'Add All Cards', make_all_cards_card_path(:id => @cards.first.id) %>
</ul>

<h2>Listing cards</h2>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Display name</th>
      <th>Suit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.number %></td>
        <td><%= card.display_name %></td>
        <td><%= card.suit %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
