<h1>Listing card_in_decks</h1>

<table>
  <thead>
    <tr>
      <th>Deck of card</th>
      <th>Card</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @card_in_decks.each do |card_in_deck| %>
      <tr>
        <td><%= card_in_deck.deck_of_card_id %></td>
        <td><%= card_in_deck.card_id %></td>
        <td><%= card_in_deck.order %></td>
        <td><%= link_to 'Show', card_in_deck %></td>
        <td><%= link_to 'Edit', edit_card_in_deck_path(card_in_deck) %></td>
        <td><%= link_to 'Destroy', card_in_deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card in deck', new_card_in_deck_path(:deck_of_card_id => 1) %>
